@model List<ReviewsJoy.Models.Review>

<div id="generalReviews">
    @if (Model.Count == 0)
    {
        <h1>Sorry, there are no reviews at this time. Add one now!</h1>
    }
    else
    {
        foreach (var r in Model)
        {
            <h1>@r.ReviewText</h1>
            @:&nbsp;&nbsp;@r.Author
        }
    }
    <br />
    <br />
    <button class="btn btn-primary" ng-click="showForm()" ng-hide="hideForm">Add A Review</button>
</div>

<div id="addReviewDiv" ng-hide="!hideForm">
    <div class="row">
        <div class="col-xs-12">
            <input id="nameTxtBx" type="text" placeholder="Name (optional)" class="form-control" />
            <textarea id="reviewTxtBx" type="text" placeholder="Review" rows="4" class="form-control"></textarea>
            <button id="submitBtn" class="btn btn-primary">
                Submit
            </button>
        </div>
    </div>
</div>

@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        $("#submitBtn").click(function () {
            var uri = '@Url.Action("AddNewReview")';
            var name = $('#nameTxtBx').val();
            var review = $('#reviewTxtBx').val();
            $.ajax({
                url: uri,
                type: 'POST',
                data: {
                    'locationId': @ViewBag.LocationId,
                    'review': review
                },
                success: function (result) {
                }
            });
        });
    });
</script>
}