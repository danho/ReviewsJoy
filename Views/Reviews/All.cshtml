@model List<ReviewsJoy.Models.Review>
@{
    ViewBag.Title = "All";
}

<div id="generalReviews">
    @foreach (var r in Model)
    {
        <h1>@r.ReviewText</h1>
    }
    <br />
    <a id="addReviewLnk" href="#">Add A Review</a>
</div>

<div id="addReviewDiv">
    <div class="row">
        <div class="col-xs-12">
            <input id="nameTxtBx" type="text" placeholder="Name (optional)" class="form-control" />
            <textarea id="reviewTxtBx" type="text" placeholder="Review" rows="4" class="form-control"></textarea>
            <button id="submitBtn" class="btn btn-primary">
                Submit
            </button>
        </div>
    </div>
</div>

@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        $("#addReviewDiv").hide();
        $('#addReviewLnk').click(function () {
            $('#generalReviews').hide();
            $('#addReviewDiv').show();
        });
        $("#submitBtn").click(function () {
            var uri = '@Url.Action("AddNewReview")';
            var name = $('#nameTxtBx').val();
            var review = $('#reviewTxtBx').val();
            $.ajax({
                url: uri,
                type: 'POST',
                data: {
                    'locationId': @ViewBag.LocationId,
                    'review': review
                },
                success: function (result) {
                }
            });
        });
    });
</script>
}